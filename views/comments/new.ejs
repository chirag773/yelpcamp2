<% include ../partials/header %>

<div class="container">
  <div class="row">
      <h1>Add  new comment to <%= campground.name %></h1>
    <div id = "frm">
    <form id="frm1" action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <input type="text" placeholder="name" name="comment[text]">
      </div>
      <div class="form-group">
        <input type="text" placeholder="comment" name="comment[author]">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-success btn-block">submit</button>
      </div>
      <a class="btn btn-success" href="/campgrounds">GO BACK</a>
    </form>
      </div>
  </div>
</div>


<style>
  
  h1{
    text-align:center;
  }
  #frm{
    width:30%;
    margin:25px auto;
    border-radius:2px solid red;
  }
  
  

</style>